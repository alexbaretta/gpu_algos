{
    "version": 3,
    "cmakeMinimumRequired": {
      "major": 4,
      "minor": 0,
      "patch": 2
    },
    "configurePresets": [
      {
        "name": "release",
        "displayName": "Release Config",
        "description": "Release build configuration",
        "binaryDir": "${sourceDir}/builds/release",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release",
          "CMAKE_CUDA_ARCHITECTURES": "89",
          "CMAKE_CXX_FLAGS": "-O3 -Werror -Wall",
          "DEFAULT_CUDA_FLAGS": "-O3 -lineinfo"
        }
      },
      {
        "name": "debug",
        "displayName": "Debug Config",
        "description": "Debug build configuration",
        "inherits": "release",
        "binaryDir": "${sourceDir}/builds/debug",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "CMAKE_CXX_FLAGS": "-O0 -g -Werror -Wall",
          "DEFAULT_CUDA_FLAGS": "-O0 -g -G"
        }
      }
    ],
    "buildPresets": [
      {
        "name": "release",
        "configurePreset": "release"
      },
      {
        "name": "debug",
        "configurePreset": "debug"
      }
    ]
}
